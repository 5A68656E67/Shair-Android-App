<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ethan.shairversion1application.ui.ItemActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="350dp">
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    custom:pager_animation="CubeIn"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="visible"
                    custom:pager_animation_span="1100"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:textColor="#ff3d3d3d"
                        android:id="@+id/item_name"
                        android:textSize="40sp"
                        android:layout_marginLeft="45dp"/>

                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40dp" />
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="115dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:id="@+id/edit_action"
                                android:layout_marginLeft="30dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/pencil_edit"
                                    android:id="@+id/pencil_edit"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="fill_parent" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="20sp"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="108dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:id="@+id/share_on_item"
                                android:layout_marginLeft="20dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/share_icon"
                                    android:layout_gravity="center_vertical"/>
                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="fill_parent" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Share"
                                    android:textSize="20sp"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/delete_item_action"
                            android:layout_marginLeft="30dp">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/delete_item_icon"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="fill_parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:textSize="20sp"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="25sp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#ffaeaeae" />
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="fill_parent" />
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="50dp"
                            android:id="@+id/address"
                            android:textSize="20sp"
                            android:textColor="#ff434343" />
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="30dp"
                            android:id="@+id/price"
                            android:textSize="20sp"
                            android:textColor="#ff434343" />
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="30dp"
                            android:id="@+id/discuss"
                            android:textSize="20sp"
                            android:textColor="#ff434343" />
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="30dp"
                            android:id="@+id/new_degree"
                            android:textSize="20sp"
                            android:textColor="#ff434343" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="178dp">
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Security Deposit"
                            android:textColor="#ff919192"
                            android:textSize="20sp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/security_deposit"
                            android:gravity="right"
                            android:textColor="#ff434343"
                            android:focusableInTouchMode="false"
                            android:focusable="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Deadline"
                            android:textColor="#ff919192"
                            android:textSize="20sp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/deadline"
                            android:gravity="right"
                            android:textColor="#ff434343"
                            android:focusableInTouchMode="false"
                            android:focusable="false"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="25sp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#ffaeaeae" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="fill_parent" />
                    <TextView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:textSize="20sp"
                        android:textColor="#ff434343"
                        android:id="@+id/posted_item_description"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
